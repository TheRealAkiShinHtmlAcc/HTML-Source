  }

  h1 {
    color: #00eaff;
    margin-bottom: 20px;
  }

  .game-board {
    display: grid;
    grid-template-columns: repeat(4, 100px);
    gap: 15px;
  }

  .card {
    width: 100px;
    height: 100px;
    background: #222;
    border: 2px solid #00eaff;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    cursor: pointer;
    transition: transform 0.3s, background 0.3s;
  }

  .card.flipped {
    background: #00eaff;
    color: #000;
    cursor: default;
  }

  .card.matched {
    background: #0f0;
    color: #000;
  }

  #message {
    margin-top: 20px;
    font-size: 1.3rem;
  }

  button {
    margin-top: 20px;
    padding: 10px 20px;
    background: #00eaff;
